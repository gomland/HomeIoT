<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#ffffd094"
    tools:context="my.home.mobileiot.IntroActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:text="초인종이 울렸습니다."
        android:textStyle="bold"
        android:textColor="#ff9d5050"/>
    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_margin="20dp"
        android:src="@drawable/door"/>
    <Button
        android:id="@+id/door_open"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/popup_btn"
        android:textColor="#ffffffff"
        android:textStyle="bold"
        android:textSize="20dp"
        android:text="문열기"/>
    <Button
        android:id="@+id/door_exit"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/popup_btn"
        android:textColor="#ffffffff"
        android:textStyle="bold"
        android:textSize="20dp"
        android:text="닫기"/>
</LinearLayout>
