<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center"
    android:background="#ffffa221"
    tools:context="my.home.mobileiot.IntroActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:textColor="#ff832626"
                        android:text="Smart Home PAD"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:textColor="#ff995555"
                        android:text="Shin's test ver"/>
                </LinearLayout>
                <EditText
                    android:id="@+id/l_login_id"
                    android:layout_width="wrap_content"
                    android:minWidth="200dp"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:textColorHint="#3a832626"
                    android:layout_marginBottom="5dp"
                    android:padding="5dp"
                    android:textColor="#ff832626"
                    android:background="@drawable/login_tb"
                    android:hint="아이디를 입력해주세요."/>
                <EditText
                    android:id="@+id/l_login_pw"
                    android:layout_width="wrap_content"
                    android:minWidth="200dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:textColor="#ff832626"
                    android:textColorHint="#3a832626"
                    android:padding="5dp"
                    android:background="@drawable/login_tb"
                    android:hint="패스워드를 입력해주세요."/>
                <CheckBox
                    android:id="@+id/l_auto_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ff832626"
                    android:layout_marginTop="10dp"
                    android:text="자동 로그인"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/logo"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:padding="20dp"
                android:gravity="center_vertical">
                <LinearLayout
                    android:id="@+id/l_login_btn_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/l_login_btn"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/regi_btn"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/l_dimmer"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:visibility="gone"
            android:background="#aa000000">
        </LinearLayout>

        <!-- second view -->
        <LinearLayout
            android:id="@+id/l_sign_in_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:padding="30dp"
            android:gravity="right">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@drawable/popup_bg">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="#ff492626"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:layout_marginBottom="30dp"
                        android:text="사용자 등록"/>
                    <EditText
                        android:id="@+id/l_reg_id"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:textColor="#ff492626"
                        android:textColorHint="#3a832626"
                        android:layout_marginBottom="10dp"
                        android:hint="아이디"/>
                    <EditText
                        android:id="@+id/l_reg_pw"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:textColor="#ff492626"
                        android:textColorHint="#3a832626"
                        android:hint="패스워드"/>
                    <TextView
                        android:id="@+id/l_reg_result"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="#ffee0000"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_marginTop="25dp"
                        android:gravity="center">
                        <Button
                            android:id="@+id/l_reg_send_btn"
                            android:layout_width="70dp"
                            android:layout_height="30dp"
                            android:textColor="#ffffffff"
                            android:textStyle="bold"
                            android:background="@drawable/popup_btn"
                            android:layout_marginRight="15dp"
                            android:text="등록"/>
                        <Button
                            android:id="@+id/l_reg_close_btn"
                            android:layout_width="70dp"
                            android:layout_height="30dp"
                            android:textColor="#ffffffff"
                            android:textStyle="bold"
                            android:background="@drawable/popup_btn"
                            android:text="닫기"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </FrameLayout>
</LinearLayout>
